const int ledPin = 14;
const int sensor_dirt_humidity_pin = 34;
int test = 0;

Adafruit_NeoPixel pixels(16, ledPin, NEO_GRB + NEO_KHZ800);

void setup() {
  pixels.begin();
    USE_SERIAL.begin(115200);

    for(uint8_t t = 4; t > 0; t--) {
        USE_SERIAL.flush();
        delay(1000);
    }

    wifiMulti.addAP("POCOX3NFC", "mathieu389600");

}

void loop() {
    // wait for WiFi connection
    if((wifiMulti.run() == WL_CONNECTED)) {

        HTTPClient http;
        
        // configure traged server and url
        //http.begin("http://192.168.43.250:3000/api/parametres", ca); //HTTPS
        http.begin("http://192.168.43.250:3000/api/historique/add"); //HTTP
        if(test == 0){
          test = 1;
          
          http.addHeader("Content-Type", "application/json");
          String httpRequestData = "{\"luminosite\":0.5,\"humidite\":0.3,\"temperature\":45,\"duree_arrosage\":2}";
          int httpResponseCode = http.POST(httpRequestData);
          http.end();
        }
        // start connection and send HTTP header
        int httpCode = http.GET();

        // httpCode will be negative on error
        if(httpCode > 0) {
            // file found at server
            if(httpCode == HTTP_CODE_OK) {
                pixels.clear(); // Set all pixel colors to 'off'

  // The first NeoPixel in a strand is #0, second is 1, all the way up
  // to the count of pixels minus one.
  for(int i=0; i<16; i++) { // For each pixel...

    // pixels.Color() takes RGB values, from 0,0,0 up to 255,255,255
    // Here we're using a moderately bright green color:
    pixels.setPixelColor(i, pixels.Color(0, 150, 0));

    pixels.show();   // Send the updated pixel colors to the hardware.

    delay(500); // Pause before next pass through loop
  }
            }
        } else {
         
        }

        http.end();
    }

    delay(5000);
}
